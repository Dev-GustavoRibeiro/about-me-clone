<section class="signup-form-area big-signup-form-area m-auto">
  <div class="progress" style="height: 6px">
    <div class="progress-bar" style="width: 30%" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'heart_icon.svg', size: '25x25' %>
    <h2 class="step-description pt-1">What do you love?</h2>
  </header>
  <%= form_with url: '/next_signup_step/5', class: 'big-form d-flex flex-column align-items-center justify-content-between' do |f| %>
    <p class="signup-instructions signup-instructions-two">Choice of three to five insterests.</p>
    <%= interest_list %>
    <ul id="selected-items" class="w-100 d-flex justify-content-around px-1">
      <li class="selected-item select-button btn btn-outline-primary px-1"></li>
      <li class="selected-item select-button btn btn-outline-primary px-1"></li>
      <li class="selected-item select-button btn btn-outline-primary px-1"></li>
      <li class="selected-item select-button btn btn-outline-primary px-1"></li>
      <li class="selected-item select-button btn btn-outline-primary px-1"></li> 
    </ul>
    <%= f.submit 'Next >', class: 'next-step-button btn w-75', disabled: true %>
  <% end %>
</section>
