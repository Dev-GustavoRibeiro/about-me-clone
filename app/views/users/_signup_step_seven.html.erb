<section class="signup-form-area m-auto">
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'click_icon.svg', size: '27x27' %>
    <h2 class="step-description pt-1"><%= @reason&.reason %></h2>
  </header>
  <%= form_with url: '/next_signup_step/8', class: 'd-flex flex-column align-items-center justify-content-between' do |f| %>
    <p class="signup-instructions-two">Enter a link to your <%= @reason&.keywords %>.</p>
    <%= f.text_field :website, placeholder: 'example.com', required: true, class: 'centralize-input w-100 mt-0 py-3 form-control' %>
    <%= f.submit 'Next >', class: 'next-step-button btn w-100' %>
  <% end %>
</section>
